{# Link for side navigation #}
{% macro item(name, route, icon, currentRoute) %}
    {% set active = 'bg-indigo-700' %}
    <li class="my-2">
        <a class="font-bold flex items-center py-2 px-4 rounded hover:bg-indigo-700 {% if currentRoute == route %}{{
        active }}{% endif %}"
           href="{% if route != '#' %}{{ path(route) }}{% else %}{{ route }}{% endif %}">
            <svg class="h-4 w-4 fill-current text-gray-100 mr-2">
                <use xlink:href="{{ asset('build/icons/zondicons-sprite.svg#' ~ icon ~ '') }}"></use>
            </svg>
            {{ name }}
        </a>
    </li>
{% endmacro %}