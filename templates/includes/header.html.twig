            <ul class="flex">
                <li>
                    <a class="text-indigo-500 hover:text-indigo-700 py-4 px-2 border-b-2 border-transparent
                    hover:border-indigo-700" href="{{ path
                        ('home')
                    }}">Home</a>
                </li>
            </ul>
        </div>
