<form method="post" action="{{ path('admin_article_delete', {'id': article.id}) }}" onsubmit="return confirm('Are you ' +
 'sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">
    <button class="px-4 py-2 bg-red-500 text-white rounded hover:bg-red-600 shadow">Delete</button>
</form>
