{{ form_start(form) }}
    {{ form_row(form.title) }}

    <div>
        {{ form_row(form.content, { 'attr': {'class': 'h-64'}}) }}
    </div>

    <div class="w-full flex">
        <div class="flex-1 mr-4">
            {{ form_row(form.category) }}
        </div>
        <div class="flex-1 ml-4">
            {{ form_row(form.tags) }}
        </div>
    </div>
    <div class="w-full flex justify-end">
        <button class="px-4 py-2 bg-green-500 text-white rounded hover:bg-green-600 shadow">{{
            button_label|default('Save')
            }}
        </button>
    </div>
{{ form_end(form) }}
