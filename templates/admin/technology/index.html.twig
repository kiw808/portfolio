{% extends 'admin/layout/base.html.twig' %}

{% block title %}Technology Index{% endblock %}

{% block body %}
    <h1>Technology index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for technology in technologies %}
            <tr>
                <td>{{ technology.id }}</td>
                <td>{{ technology.name }}</td>
                <td>
                    <a href="{{ path('admin_technology_show', {'id': technology.id}) }}">show</a>
                    <a href="{{ path('admin_technology_edit', {'id': technology.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-indigo" href="{{ path('admin_technology_new') }}">Create new</a>
{% endblock %}
